
<head>
  <%= stylesheet_link_tag "inbox" %>
  <%= javascript_include_tag "inbox" %>
</head>

<body id="top">

  <div id="main">
    <% if @over_ten %>
    <%= link_to "Show More", "?m=all" %>
    <% end %>


    <div class="container">
      <div class="row">
        <div class="col-sm-3 col-md-2">
        </div>
        <div class="col-sm-9 col-md-12">
          <!-- Split button -->
          <div class="btn-group">
          </div>

          <button type="button" class="btn btn-default" data-toggle="tooltip" title="Refresh">
            &nbsp;&nbsp;&nbsp;
            <span class="glyphicon glyphicon-refresh">  
            </span>&nbsp;&nbsp;&nbsp;
          </button>

        </div>
      </div>

      <hr>
      <div class="row scrollable">

       <% @messages.each do |message| %>
       <% if message.body %>
       <% user = User.find(message.user_id) %>
       <!-- Tab panes -->
       <div class="tab-content">
        <div class="tab-pane fade in active" id="home">
          <div class="list-group ">
            <div class="list-group-item message_box read">

              <span class="glyphicon">  
              </span>

              <% if user == current_user %>
              <span class="name active" style="min-width: 100px; display: inline-block;">
                Me

              </span> <br>
              <% else %>

              <span class="name" style="min-width: 100px; display: inline-block;">
                <%= message.user.full_name %>
              </span><br>
              <% end %>

              <span class="text-muted">
                <%= message.body %>
              </span>

              <span class="badge">
                <%= message.formatted_updated_at %>
              </span> 

          </div>
          <% end %>
          <% end %>
        </div>
      </div>
  </div>
</div>
<center>

<%= form_for([@conversation, @message], html: {class: 'ui reply form'}) do |f| %>
<div class=”field”>
 <%= f.text_field :body, class: 'form-control message_field' %>
</div>
<%= f.text_field :user_id, value: current_user.id, type: 'hidden' %>
<div>
 <%= f.submit 'Send', class: 'ui blue labeled submit icon button' %>
</div>
<% end %>
</center>
</div>

</body>